openapi: 3.0.0
info:
  title: VirusTotal IP Report
  version: 1.0.0
servers:
  - url: https://www.virustotal.com/api/v3
paths:
  "/ip_addresses/{ip}":
    get:
      tags:
        - default
      operationId: GetIPReport
      summary: Retrieve reputation and analysis data for a specific IP address from VirusTotal.
      parameters:
        - name: ip
          in: path
          required: true
          schema:
            type: string
            format: ipv4
        - name: x-apikey
          in: header
          required: true
          schema:
            type: string
      responses:
        "200":
          description: Successful response with IP analysis data
          content:
            application/json:
              schema:
                type: object
        default:
          description: Error response
          content:
            application/json:
              schema:
                type: object
components: {}
